sbt-web {

  sites {
    url = "http://10.0.2.15:7003/sites"
    user = "fwadmin"
    pass = "xceladmin"
  }

  akka {
  // use logback for logging
    loggers = ["akka.event.slf4j.Slf4jLogger"]
    logging-filter = "akka.event.slf4j.Slf4jLoggingFilter"
    log-dead-letters-during-shutdown = true
    // no dead letters

    // debugging options
    loglevel = "DEBUG"
    actor {
      debug {
        receive = on
        lifecycle = on
        autoreceive = off
        event-stream = off
        fsm = off
      }
    }
  }
  spray.can {
    client {
      response-chunk-aggregation-limit = 0
    }
  }
}
